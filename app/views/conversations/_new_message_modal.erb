<%- if profile_visitor? %>
  <div id='new-message-modal' class='modal hide fade'>
    <div class='modal-header'>
      <strong><%= t '.header' %></strong>

      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    </div>

    <div class='modal-body'>
      <%= simple_form_for :message, url: messages_path, remote: true, html: { class: 'form', id: 'send-message' } do |form| %>
        <%= form.input :body, :as => :text, :label => false, :input_html => { class: 'span5', rows: 6 } %>

        <%- if @conversation.present? %>
          <%= form.input :conversation_id, :as => :hidden, :input_html => { value: @conversation.id } %>
        <% end %>

        <%= form.input :interlocutor_id, :as => :hidden, :input_html => { value: @user.id } %>

        <%= form.submit t('.submit'), class: 'btn btn-info', data: { disable_with: t('common.please_wait') } %>
      <% end %>
    </div>

    <div class='modal-footer'>
      <%- if @conversation.present? %>
        <%= link_to t('conversations.to_dialog'), conversation_path(@conversation), id: 'link-to-conversation' %>
      <% end %>

      <button class="btn" data-dismiss="modal" aria-hidden="true"> <%= t 'common.close' %> </button>
    </div>
  </div>
<% end %>
