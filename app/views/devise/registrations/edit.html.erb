<%= page_header %>

<%= simple_form_for(resource, url: user_registration_path, html: { method: 'put', class: 'form form-horizontal' }) do |f| %>
  <%= error_messages_for resource %>

  <%= f.input :email, required: true, autofocus: true %>
  <%= f.input :password, hint: t('.password_tip'), required: false %>
  <%= f.input :password_confirmation, required: false %>

  <hr />
  <%= f.input :current_password, hint: t('.current_password_tip'), required: true %>

  <%= f.submit t('common.submit'), class: 'btn btn-info' %>
<% end %>
