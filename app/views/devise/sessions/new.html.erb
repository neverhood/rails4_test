<%= page_header %>

<%= simple_form_for resource, as: resource_name, url: user_session_path, class: 'form form-horizontal' do |form| %>
  <%= form.input :email, required: false, autofocus: true %>
  <%= form.input :password, required: false %>
  <%= form.input :remember_me, :as => :boolean, :inline_label => true, :label => false %>

  <hr />

  <%= form.submit t('auth.sign_in'), class: 'btn btn-info', data: { disable_with: t('common.please_wait') }  %>

  <div class='auth-links'>
    <%= link_to t('auth.forgot_password?'), new_user_password_path %>
    <%= link_to t('auth.sign_up'), new_user_registration_path %>
  </div>
<% end %>
