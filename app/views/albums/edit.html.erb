<%= page_header %>

<div id='edit-album'>
  <%= simple_form_for @album, url: album_path(@album), html: { method: 'put', class: 'form form-horizontal' } do |form| %>
    <%= form.input :name %>
    <%= form.input :description, :as => :text, input_html: { class: 'span5', rows: 6 } %>

    <%= form.submit t('common.submit'), data: { disable_with: t('common.please_wait') } %>
  <% end %>
</div>
